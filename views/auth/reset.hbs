<div class="row">
    <div id="login" class="col s6 offset-s3">

        {{#if error}}
            <p class="alert">{{error}}</p>
        {{/if}}

        <h4>Did you forget your password?</h4>
        <form action="/auth/reset" method="POST">
            <div class="row">
                <div class="input-field">
                    <input id="emailid" name="email" type="email" class="validate" required>
                    <label class="active" for="emailid">Email</label>
                    <span class="helper-text" data-error="Please enter a correct email" data-success="right"></span>
                </div>

            <input type="hidden" name="_csrf" value="{{csrf}}">

            <div class="row">
                <button class="btn btn-primary">Reset</button>
            </div>
        </form>

    </div>
</div>