<div class="auth">
    <div class="row">
        <div class="col s12">
        <ul class="tabs">
            <li class="tab col s6"><a href="#login" class="active">Login</a></li>
            <li class="tab col s6"><a href="#register">Registration</a></li>
        </ul>
        </div>
        <div id="login" class="col s6 offset-s3">

            {{#if loginError}}
                <p class="alert">{{loginError}}</p>
            {{/if}}

            <h3>Enter to the shop</h3>
            <form action="/auth/login" method="POST">
                <div class="row">
                    <div class="input-field">
                        <input id="emailid" name="email" type="email" class="validate" required>
                        <label class="active" for="emailid">Email</label>
                        <span class="helper-text" data-error="Please enter a correct email" data-success="right"></span>
                    </div>
                </div>    
                <div class="row">
                    <div class="input-field">
                        <input id="passwordid" name="password" type="password" class="validate" required>
                        <label class="active" for="passwordid">Password</label>
                        <span class="helper-text" data-error="Please enter a password" data-success="right"></span>
                    </div>
                </div>

                <input type="hidden" name="_csrf" value="{{csrf}}">

                <div class="row">
                    <button class="btn btn-primary">Login</button>
                </div>
            </form>

        </div>
        <div id="register" class="col s6 offset-s3">

            {{#if registerError}}
                <p class="alert">{{registerError}}</p>
            {{/if}}
            
            <h3>Create an account</h3>
            <form action="/auth/register" method="POST">
                <div class="row">
                    <div class="input-field">
                        <input id="emailredid" name="email" type="email" class="validate" required>
                        <label class="active" for="emailredid">Email</label>
                        <span class="helper-text" data-error="Please enter a correct email" data-success="right"></span>
                    </div>
                </div>    
                <div class="row">
                    <div class="input-field">
                        <input id="passwordregid" name="password" type="password" class="validate" required>
                        <label class="active" for="passwordregid">Password</label>
                        <span class="helper-text" data-error="Please enter a password" data-success="right"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field">
                        <input id="confirmregid" name="repeat" type="password" class="validate" required>
                        <label class="active" for="confirmregid">Confirm password</label>
                        <span class="helper-text" data-error="Please enter a password" data-success="right"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field">
                        <input id="nameregid" name="name" type="text" class="validate" required>
                        <label class="active" for="nameregid">Your Name</label>
                        <span class="helper-text" data-error="Please enter your name" data-success="right"></span>
                    </div>
                </div>

                <input type="hidden" name="_csrf" value="{{csrf}}">

                <div class="row">
                    <button class="btn btn-primary">Register</button>
                </div>
            </form>

        </div>
    </div>
</div>