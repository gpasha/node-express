<h1>Courses</h1>
{{#if courses.length}}
    {{#each courses}}
    <div class="row">
        <div class="col s6 offset-s3">
        <div class="card">
            <div class="card-image">
                <img src={{img}}>
                <a href="/courses/{{id}}" class="btn-floating halfway-fab waves-effect waves-light red">
                    <i style="font-size:14px;" class="material-icons">Open</i>
                </a>
            </div>
            <div class="card-content">
                <span class="card-title">{{title}}</span>
                <p class="price">{{price}}</p>
            </div>
        </div>
        </div>
    </div>
    {{/each}}
{{else}}
    <p>No courses</p>
{{/if}}