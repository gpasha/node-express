<h1>Courses</h1>
{{#if courses.length}}
    {{#each courses}}
    <div class="row">
        <div class="col s6 offset-s3">
        <div class="card">
            <div class="card-image">
                <img src={{img}}>
                <a href="/courses/{{id}}" target="_blank" style="right:70px;"
                   class="btn-floating halfway-fab waves-effect waves-light red">
                    <i style="font-size:14px;" class="material-icons">Open</i>
                </a>
                {{#if @root.isAuth}}
                    <a href="/courses/{{id}}/edit?allow=true" class="btn-floating halfway-fab waves-effect waves-light red">
                        <i style="font-size:14px;" class="material-icons">Edit</i>
                    </a>
                {{/if}}
            </div>
            <div class="card-content">
                <span class="card-title">{{title}}</span>
                <p class="price">{{price}}</p>
                {{#if @root.isAuth}}
                    <form method="POST" action="/card/add">
                        <input type="hidden" name="_csrf" value="{{@root.csrf}}">
                        <input type="hidden" name="id" value={{id}}>
                        <button type="submit" class="waves-effect waves-light btn buy-btn">
                            Buy
                        </button>
                    </form>
                {{/if}}
            </div>
        </div>
        </div>
    </div>
    {{/each}}
{{else}}
    <p>No courses</p>
{{/if}}